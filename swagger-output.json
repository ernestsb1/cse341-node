{
  "swagger": "2.0",
  "info": {
    "title": "My API",
    "description": "Contacts and Temples API",
    "version": "1.0.0"
  },
  "host": "cse341-node-ob82.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/api/contacts": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Get all contacts",
        "responses": {
          "200": { "description": "List of contacts" }
        }
      },
      "post": {
        "tags": ["Contacts"],
        "summary": "Create a new contact",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Contact"
            }
          }
        ],
        "responses": {
          "201": { "description": "Contact created" }
        }
      }
    },
    "/api/contacts/{id}": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Get a contact by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Contact found" },
          "404": { "description": "Not found" }
        }
      },
      "put": {
        "tags": ["Contacts"],
        "summary": "Update a contact by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Contact"
            }
          }
        ],
        "responses": {
          "200": { "description": "Contact updated" },
          "404": { "description": "Not found" }
        }
      },
      "delete": {
        "tags": ["Contacts"],
        "summary": "Delete a contact by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Contact deleted" },
          "404": { "description": "Not found" }
        }
      }
    },
    "/temples/": {
      "get": {
        "description": "API Key if needed: [your key]",
        "parameters": [
          { "name": "apiKey", "in": "header", "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "description": "Add a new temple",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "Salt Lake Temple" },
                "temple_id": { "example": "123" },
                "description": { "example": "Historic LDS temple" },
                "location": { "example": "Salt Lake City" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/temples/{temple_id}": {
      "get": {
        "description": "Get a temple by ID",
        "parameters": [
          { "name": "temple_id", "in": "path", "required": true, "type": "string" },
          { "name": "apiKey", "in": "header", "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  },
  "definitions": {
    "Contact": {
      "type": "object",
      "required": ["firstName", "lastName", "email", "favoriteColor", "birthday"],
      "properties": {
        "firstName": {
          "type": "string",
          "example": "John"
        },
        "lastName": {
          "type": "string",
          "example": "Doe"
        },
        "email": {
          "type": "string",
          "example": "john@example.com"
        },
        "favoriteColor": {
          "type": "string",
          "example": "Blue"
        },
        "birthday": {
          "type": "string",
          "format": "date",
          "example": "1990-01-01"
        }
      }
    }
  }
}
