{
  "swagger": "2.0",
  "info": {
    "title": "Contacts, Temples & Books API",
    "description": "API for managing contacts, temples, and books for CSE341.",
    "version": "1.0.0"
  },
  "host": "cse341-node-ob82.onrender.com",
"basePath": "/api",
  "tags": [
    {
      "name": "Contacts",
      "description": "Endpoints related to contacts"
    },
    {
      "name": "Temples",
      "description": "Endpoints related to temples"
    },
    {
      "name": "Books",
      "description": "Endpoints related to books"
    }
  ],
  "schemes":
   [ "https" ],
  "paths": {
    "/contacts": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Get all contacts",
        "responses": {
          "200": {
            "description": "List of contacts"
          }
        }
      },
      "post": {
        "tags": ["Contacts"],
        "summary": "Create a contact",
        "responses": {
          "201": {
            "description": "Contact created"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Get a contact by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Contact found"
          },
          "404": {
            "description": "Not found"
          }
        }
      },
      "put": {
        "tags": ["Contacts"],
        "summary": "Update a contact by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Contact updated"
          },
          "400": {
            "description": "Bad request"
          },
          "404": {
            "description": "Not found"
          }
        }
      },
      "delete": {
        "tags": ["Contacts"],
        "summary": "Delete a contact by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Contact deleted"
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
    "/temples": {
      "get": {
        "tags": ["Temples"],
        "summary": "Get all temples",
        "responses": {
          "200": {
            "description": "List of temples"
          }
        }
      },
      "post": {
        "tags": ["Temples"],
        "summary": "Create a temple",
        "responses": {
          "201": {
            "description": "Temple created"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/temples/{id}": {
      "get": {
        "tags": ["Temples"],
        "summary": "Get a temple by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Temple found"
          },
          "404": {
            "description": "Not found"
          }
        }
      },
      "put": {
        "tags": ["Temples"],
        "summary": "Update a temple by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Temple updated"
          },
          "400": {
            "description": "Bad request"
          }
        }
      },
      "delete": {
        "tags": ["Temples"],
        "summary": "Delete a temple by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Temple deleted"
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
   
  "/books": {
  "get": {
    "tags": ["Books"],
    "summary": "Get all books",
    "responses": {
      "200": {
        "description": "List of books"
      }
    }
  },
  "post": {
    "tags": ["Books"],
    "summary": "Create a book",
    "consumes": ["application/json"],
    "parameters": [
      {
        "in": "body",
        "name": "book",
        "description": "Book object to be created",
        "required": true,
        "schema": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "author": { "type": "string" },
            "genre": { "type": "string" },
            "publishedYear": { "type": "integer" },
            "pages": { "type": "integer" },
            "available": { "type": "boolean" }
          },
          "required": [
            "title",
            "author",
            "genre",
            "publishedYear",
            "pages",
            "available"
          ]
        }
      }
    ],
    "responses": {
      "201": {
        "description": "Book created"
      },
      "400": {
        "description": "Bad request"
      }
    }
  }
},
"/books/{id}": {
  "get": {
    "tags": ["Books"],
    "summary": "Get book by ID",
    "parameters": [
      {
        "name": "id",
        "in": "path",
        "required": true,
        "type": "string"
      }
    ],
    "responses": {
      "200": {
        "description": "Book found"
      },
      "404": {
        "description": "Not found"
      }
    }
  },
  "put": {
    "tags": ["Books"],
    "summary": "Update a book by ID",
    "parameters": [
      {
        "name": "id",
        "in": "path",
        "required": true,
        "type": "string"
      },
      {
        "in": "body",
        "name": "body",
        "required": true,
        "schema": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "author": { "type": "string" },
            "genre": { "type": "string" },
            "publishedYear": { "type": "integer" },
            "pages": { "type": "integer" },
            "rating": { "type": "number" },
            "available": { "type": "boolean" }
          }
        }
      }
    ],
    "responses": {
      "200": { "description": "Book updated" },
      "400": { "description": "Bad request" },
      "404": { "description": "Book not found" }
    }
  },
  "delete": {
    "tags": ["Books"],
    "summary": "Delete a book by ID",
    "parameters": [
      {
        "name": "id",
        "in": "path",
        "required": true,
        "type": "string"
      }
    ],
    "responses": {
      "200": { "description": "Book deleted" },
      "404": { "description": "Not found" }
    }
  }
}
  }
}